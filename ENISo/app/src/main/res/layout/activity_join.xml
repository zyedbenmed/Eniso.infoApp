<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alaabid.eniso.Join"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@color/darkblue">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="SIGN UP"
            android:layout_gravity="center"/>
        <EditText
            android:textColorHint="@color/white"
            android:layout_marginTop="80dp"
            android:id="@+id/name"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Name" />
        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/surname"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Surname" />

        <EditText
            android:id="@+id/cin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_credit_card_black_24dp"
            android:drawablePadding="15dp"
            android:hint="CIN"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/Br"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:drawablePadding="15dp"
            android:text=" Branch "
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/branch"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:popupBackground="?attr/colorAccent"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Grp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:drawableLeft="@drawable/ic_format_list_numbered_black_24dp"
            android:drawablePadding="15dp"
            android:text=" Group "
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/group"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:textAlignment="center"
            android:popupBackground="?attr/colorAccent"/>


        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/mail"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="E-mail" />


        <Button
            android:id="@+id/signup"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyle"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_send_black_24dp"
            android:text="SEND" />

    </LinearLayout>







